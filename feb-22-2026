<script>
const DATA = [
  { category: "Meat & Seafood", icon: "ðŸ¥©", iconBg: "#FDEEE8", items: [
    { text: "2 lbs grass-fed beef chuck, cubed", meals: [1] },
    { text: "1 lb grass-fed ground beef", meals: [4] },
